<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detailAppBar"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/detailCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/orange_light"
            app:layout_scrollFlags="scroll">



            <ImageView
                android:id="@+id/detailPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_retaurant"
                app:layout_collapseMode="parallax" />




        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailRestaurantInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/detailRestaurantName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:soundEffectsEnabled="false"
                    tools:text="Restaurant name"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textIsSelectable="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/detailRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:numStars="3"
                    app:layout_constraintStart_toEndOf="@+id/detailRestaurantName"
                    app:layout_constraintTop_toTopOf="@+id/detailRestaurantName" />

                <TextView
                    android:id="@+id/detailRestaurantAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="4dp"
                    tools:text="Restaurant address"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailRestaurantName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/detailCallButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/detail_call"
                android:textColor="@color/orange_light"
                app:drawableTopCompat="@drawable/call_48px"
                app:drawableTint="@color/orange_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailRestaurantInfos" />

            <ImageButton
                android:id="@+id/detailLikeButton"
                android:layout_width="29dp"
                android:layout_height="28dp"
                android:background="@drawable/like_48px"
                app:drawableTint="@color/orange_light"
                app:layout_constraintEnd_toStartOf="@+id/detailWebIcon"
                app:layout_constraintStart_toEndOf="@+id/detailCallButton"
                app:layout_constraintTop_toTopOf="@+id/detailCallButton"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/detailLikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_like"
                android:textColor="@color/orange_light"
                app:layout_constraintBottom_toBottomOf="@id/detailCallButton"
                app:layout_constraintEnd_toEndOf="@+id/detailLikeButton"
                app:layout_constraintStart_toStartOf="@+id/detailLikeButton"
                app:layout_constraintTop_toBottomOf="@+id/detailLikeButton" />

            <TextView
                android:id="@+id/detailWebIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:text="@string/detail_website"
                android:textColor="@color/orange_light"
                android:drawableTint="@color/orange_light"
                app:layout_constraintBottom_toBottomOf="@+id/detailCallButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/detailCallButton"
                app:drawableTopCompat="@drawable/website_48px"
                android:clickable="true"
                android:focusable="true" />
            

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/detailCallButton"
                android:layout_margin="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detail_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:listitem="TODO"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chose_restaurant_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        app:layout_anchor="@id/detailAppBar"
        app:layout_anchorGravity="end|bottom" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>